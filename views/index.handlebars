<h1>Eat-da-Burger</h1>

<h2>If you dream it, we can create it!</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured }}
      {{> burgers/burger-block devoured=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers that are ordered!</h2>

<ul>
  {{#each burgers}}
    {{#if devoured }}
      {{> burgers/burger-block devoured=false}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">
  <div class="form-group">
    <label for="brgr">Burger:</label>
    <input type="text" class="brgr" name="name">
  </div>

  <div class="form-group">
    <label for="devoured" class="for">Devoured?</label><br>
    <input type="radio" class="devoured" value="1" checked>Devoured!<br>
  </div>

  <button type="submit">Add Burger</button>

</form>

